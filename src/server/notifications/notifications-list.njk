{% extends "layouts/tabbed-page.njk" %}

{% block beforeTabContent %}
  {{ appHeading({
    text: heading,
    caption: "IPAFFS notifications management"
  }) }}

{% endblock %}

{% block tabContent %}
  {{ appEntityList({
    headings: [
      { text: "ID", size: "large" },
      { text: "ETA", size: "medium" },
      { text: "POE", size: "small" },
      { text: "Updated", size: "medium" },
      { text: "Status", size: "small" },
      { text: "Match Outcome", size: "small" }
    ],
    entityRows: notifications,
    noResult: "There are no CHEDS available at the moment"
  }) }}

  {% from "govuk/components/pagination/macro.njk" import govukPagination %}

  {{ govukPagination({
    previous: {
      href: "#"
    },
    next: {
      href: "#"
    },
    items: [
      {
        number: 1,
        href: "#"
      },
      {
        number: 2,
        current: true,
        href: "#"
      },
      {
        number: 3,
        href: "#"
      }
    ]
  }) }}

{% endblock %}

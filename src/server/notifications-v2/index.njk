{% extends "layouts/tabbed-page.njk" %}

{% block beforeTabContent %}
  {{ appHeading({
    text: heading,
    caption: "IPAFFS notifications management"
  }) }}

{{ appHero({
    heading: "Build your Defra applications on the Core Delivery Platform",
    lead: {
      html: "Helping teams to create, deploy, run and monitor applications."
    },
    secondary: {
      html: "BBB"
    },
    aside: {
      html: "CCC"
    }
  }) }}

{% endblock %}

{% block tabContent %}
  {{ appEntityList({
    headings: [
      { text: "ID", size: "large" },
      { text: "Status", size: "small" },
      { text: "Updated", size: "small" },
      { text: "# Packages", size: "small" }
    ],
